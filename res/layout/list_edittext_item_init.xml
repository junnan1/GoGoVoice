<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- 识别结果展示界面 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_edittext_init_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/init_result" />

        <EditText
            android:id="@+id/et_edittext_init_result"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_margin="12dp"
            android:layout_weight="0.26"
            android:background="@drawable/shape"
            android:inputType="text"
            android:text="语音转化文字"
            android:editable="false"
            android:maxLength="20"
            android:singleLine="true" />
    </LinearLayout>

    <!-- 电话界面 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_edittext_init_dial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/init_dial" />

        <EditText
            android:id="@+id/et_edittext_init_dial"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_margin="12dp"
            android:layout_weight="0.26"
            android:background="@drawable/shape"
            android:inputType="text"
            android:text="可以打电话"
            android:editable="false"
            android:maxLength="20"
            android:singleLine="true" />
    </LinearLayout>
    
    <!-- 打开界面 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_edittext_init_openapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/init_openapp" />

        <EditText
            android:id="@+id/et_edittext_init_openapp"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_margin="12dp"
            android:layout_weight="0.26"
            android:background="@drawable/shape"
            android:inputType="text"
            android:text="打开应用程序"
            android:editable="false"
            android:maxLength="20"
            android:singleLine="true" />
    </LinearLayout>
    
    <!--搜索界面 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_edittext_init_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/init_search" />

        <EditText
            android:id="@+id/et_edittext_init_search"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_margin="12dp"
            android:layout_weight="0.26"
            android:background="@drawable/shape"
            android:inputType="text"
            android:text="进行搜索"
            android:editable="false"
            android:maxLength="20"
            android:singleLine="true" />
    </LinearLayout>
    
    <!-- 信息界面 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_edittext_init_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/init_sms" />

        <EditText
            android:id="@+id/et_edittext_init_sms"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_margin="12dp"
            android:layout_weight="0.26"
            android:background="@drawable/shape"
            android:inputType="text"
            android:text="发送信息"
            android:editable="false"
            android:maxLength="20"
            android:singleLine="true" />
    </LinearLayout>

</LinearLayout>